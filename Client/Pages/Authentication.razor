@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
<RemoteAuthenticatorView Action="@Action" OnLogInSucceeded="@setUser" />

<NavMenu @ref="MyNavMenu"></NavMenu>

@code{
    [Parameter] public string? Action { get; set; }

    [Microsoft.AspNetCore.Components.Parameter]
    public Microsoft.AspNetCore.Components.EventCallback<bool> OnLogInSucceeded { get; set; }
    private NavMenu MyNavMenu;

    private void setUser()
    {
        MyNavMenu.setUser();
    }

}
