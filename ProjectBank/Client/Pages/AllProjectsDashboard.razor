@page "/projects"
@inject HttpClient HttpClient
@inject NavigationManager UriHelper
@using ProjectBank.Shared

<h1>All Projects</h1>
<p>These are all projects currently available on Project Bank!</p>





    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var project in Projects)
            {
                <tr>
                    <td><a href="project/@project.id">@project.id</a></td>
                    <td>@project.name</td>
                    <td>@project.desc</td>
                    <td>@project.author</td>
                </tr>
            }
        </tbody>
    </table>



@code {

    private List<Project> Projects = new();

    protected override async Task OnInitializedAsync()
    {       

       Projects = await HttpClient.GetFromJsonAsync<List<Project>>("Project/List");
   
    }
}